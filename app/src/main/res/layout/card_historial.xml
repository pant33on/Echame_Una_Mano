<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageHistorial"
            android:layout_width="133dp"
            android:layout_height="170dp"
            android:src="@drawable/icon_user"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre:"
                android:textColor="@color/colorPrimarioDark"
                android:textSize="13sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patricio Yañez"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:maxLines="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Origen:"
                android:textColor="@color/colorPrimarioDark"
                android:textSize="13sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tvOrigen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Walker Martinez 2263"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:maxLines="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destino:"
                android:textColor="@color/colorPrimarioDark"
                android:textSize="13sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tvDestino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avenida Providencia 6020"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:maxLines="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calificación:"
                android:textColor="@color/colorPrimarioDark"
                android:textSize="13sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tvCalificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.0"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:maxLines="1"/>


        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>