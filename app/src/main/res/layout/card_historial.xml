<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <ImageView
                android:id="@+id/imageHistorial"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/man"
                android:scaleType="centerCrop"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patricio Yañez"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="6dp"
                android:maxLines="1"
                android:layout_gravity="center"
                android:layout_margin="5dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Origen:"
                android:textColor="@color/colorPrimarioDark"
                android:textSize="12sp"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"/>
            <TextView
                android:id="@+id/tvOrigen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Walker Martinez 2263"
                android:textSize="13sp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="6dp"
                android:maxLines="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destino:"
                android:textColor="@color/colorPrimarioDark"
                android:textSize="12sp"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"/>
            <TextView
                android:id="@+id/tvDestino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avenida Providencia 6020"
                android:textSize="13sp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="6dp"
                android:maxLines="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calificación:"
                android:textColor="@color/colorPrimarioDark"
                android:textSize="12sp"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"/>
            <TextView
                android:id="@+id/tvCalificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.0"
                android:textSize="13sp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="6dp"
                android:maxLines="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Servicio:"
                android:textColor="@color/colorPrimarioDark"
                android:textSize="12sp"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"/>
            <TextView
                android:id="@+id/tvServicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grúa"
                android:textSize="13sp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="6dp"
                android:maxLines="1"/>


        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>